  </div>

  <section id="borrow-section2" class="p-16">
    <h2 class="text-2xl font-bold mb-4" id="sect-header2">Pickups</h2>
      <ul class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-3 xl:grid-cols-3 gap-10" id="pagination-list">
        <% if( data.pickups && data.pickups.length > 0 ) { %>
          <% data.pickups.slice(-6).forEach( pickup => { %>
            <a href="/librarian/pickup/<%= pickup._id %>" class="p-4 rounded-md shadow-md" id="pagination-item2">
              <div class="rounded-full overflow-hidden w-40 h-40 mx-auto mb-4">
                <img src="/<%= pickup.reader.profilePicture %>" alt="Image 1" class="w-full h-full object-cover">
              </div>
              <h3 class="text-xl font-bold mb-2 text-center"><%= pickup.reader.username %></h3>
              <p class="text-center"><%= pickup.createdOn %></p>
            </a>
          <% }); %>
          <%}%>
      </ul>
    <div class="view-all">
      <a href="/librarian/pickup-all" class="view-all-button2">View all</a>
    </div>
  </section>
  
  <div class="sect-divider2">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="#163020" fill-opacity="1" d="M0,224L26.7,224C53.3,224,107,224,160,213.3C213.3,203,267,181,320,181.3C373.3,181,427,203,480,197.3C533.3,192,587,160,640,170.7C693.3,181,747,235,800,250.7C853.3,267,907,245,960,240C1013.3,235,1067,245,1120,229.3C1173.3,213,1227,171,1280,160C1333.3,149,1387,171,1413,181.3L1440,192L1440,0L1413.3,0C1386.7,0,1333,0,1280,0C1226.7,0,1173,0,1120,0C1066.7,0,1013,0,960,0C906.7,0,853,0,800,0C746.7,0,693,0,640,0C586.7,0,533,0,480,0C426.7,0,373,0,320,0C266.7,0,213,0,160,0C106.7,0,53,0,27,0L0,0Z"></path></svg>
  </div>
  <section id="borrow-section" class="p-16 pb-0">
    <h2 class="text-2xl font-bold mb-4" id="sect-header">Borrows</h2>
    <% if (data.borrows && data.borrows.length > 0) { %> 
    <ul class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-3 xl:grid-cols-3 gap-10" id="pagination-list">
        <% data.borrows.slice(-6).forEach(borrow => { %>
          <a href="/librarian/borrow/<%= borrow._id %>" class="p-4 rounded-md shadow-md" id="pagination-item">
            <div class="rounded-full overflow-hidden w-40 h-40 mx-auto mb-4">
              <img src="/<%= borrow.reader.profilePicture %>" alt="Image 1" class="w-full h-full object-cover">
            </div>
            <h3 class="text-xl font-bold mb-2 text-center"><%= borrow.reader.username %></h3>
            <p class="text-center">Created On: <%= borrow.createdOn %></p>
          </a>
        <% }); %>
    </ul>
    <% } %>
    <div class="view-all">
      <a href="/librarian/borrow-all" class="view-all-button">View all</a>
    </div>
  </section>

  <script src="/js/librarian-role.js"></script>
  <%- include("../partials_readers/footer.ejs") %>
</body>
</html>