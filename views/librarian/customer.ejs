<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" href="images/vxnhe-icon.png" type="image/x-icon">
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles/librarian-role.css">
  <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">
  <title>Document</title>
</head>
<body>
  <h1>Customers</h1>
  <!-- Display Requests -->
  <% if (data.requests && data.requests.length > 0) { %>
    <h2>Requests</h2>
    <ul>
        <% data.requests.forEach(request => { %>
            <li>
                <a href="/librarian/request/<%= request._id %>"> Link </a>
                <p>Reader: <%= request.reader.username %></p>
                <p>Created On: <%= request.createdOn %></p>
                <p>Number of Books: <%= request.books.length %></p>
                <p>Status: <%= request.status %></p>
            </li>
        <% }); %>
    </ul>
  <% } %>

  <!-- Display Pickups -->
  <% if (data.pickups && data.pickups.length > 0) { %>
    <h2>Pickups</h2>
    <ul>
        <% data.pickups.forEach(pickup => { %>
            <li>
                <a href="/librarian/pickup/<%= pickup._id %>"> Link </a>
                <p>Reader: <%= pickup.reader.username %></p>
                <p>Created On: <%= pickup.createdOn %></p>
                <p>Number of Books: <%= pickup.books.length %></p>
                <p>Status: <%= pickup.status %></p>
            </li>
        <% }); %>
    </ul>
  <% } %>

  <!-- Display Borrows -->
  <% if (data.borrows && data.borrows.length > 0) { %>
    <h2>Borrows</h2>
    <ul>
        <% data.borrows.forEach(borrow => { %>
            <li>
              <a href="/librarian/borrow/<%= borrow._id %>"> Link </a>
                <p>Reader: <%= borrow.reader.username %></p>
                <p>Created On: <%= borrow.createdOn %></p>
                <p>Number of Books: <%= borrow.books.length %></p>
                <p>Status: <%= borrow.status %></p>
            </li>
        <% }); %>
    </ul>
  <% } %>

</body>
</html>