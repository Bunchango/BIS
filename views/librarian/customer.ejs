<body>
  <%- include('./partials-librarian/nav-librarian.ejs')%>
  <section class="search-section">
  </section>

  <section id="borrow-section" class="p-16 pb-0">
    <h2 class="text-2xl font-bold mb-4" id="sect-header">Requests</h2>
    <% if (data.requests && data.requests.length > 0) { %>
    <ul class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-3 xl:grid-cols-3 gap-10" id="pagination-list">
        <% data.requests.slice(-6).forEach(request => { %>
            <a href="/librarian/request/<%= request._id %>" class="p-4 rounded-md shadow-md" id="pagination-item">
              <div class="rounded-full overflow-hidden w-40 h-40 mx-auto mb-4">
                <img src="/<%= request.reader.profilePicture %>" alt="Image 1" class="w-full h-full object-cover">
              </div>
              <h3 class="text-xl font-bold mb-2 text-center"><%= request.reader.username %></h3>
              <p class="text-center">Created On: <%= request.createdOn %></p>
            </a>
        <% }); %>
    </ul>
    <% } %>
    <div class="view-all">
      <a href="/librarian/request-all" class="view-all-button">View all</a>
    </div>
  </section>

  <div class="sect-divider">
