<body>
  <%- include('./partials-librarian/nav-librarian.ejs')%>
  <section class="search-section">
    <label for="search">Search for Requests</label>
    <input type="search" id="search" data-request-search>
  </section>
  <section id="borrow-section" class="p-16 pb-0">
    <h2 class="text-2xl font-bold mb-4" id="sect-header">Requests</h2>
    <% if (requests && requests.length > 0) { %> 
      <ul class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-3 xl:grid-cols-3 gap-10" id="pagination-list" data-requests-container>
          <!-- <% requests.forEach(request => { %>
              <a href="/librarian/request/<%= request._id %>" class="p-4 rounded-md shadow-md" id="pagination-item">
                <div class="rounded-full overflow-hidden w-40 h-40 mx-auto mb-4">
                  <img src="/<%= request.reader.profilePicture %>" alt="Image 1" class="w-full h-full object-cover">
                </div>
                <h3 class="text-xl font-bold mb-2 text-center"><%= request.reader.username %></h3>
                <p class="text-center">Created On: <%= request.createdOn %></p>
              </a>
          <% }); %> -->
      </ul>
    <% } %>

    <template data-requests-template>
      <a class="p-4 rounded-md shadow-md" id="pagination-item">
        <div class="rounded-full overflow-hidden w-40 h-40 mx-auto mb-4" data-img>
          <img src="" alt="" class="w-full h-full object-cover">
        </div>
        <h3 class="text-xl font-bold mb-2 text-center" data-header></h3>
        <div data-body class="text-center">
        </div>
      </a>
    </template>
      
      
  </section>
<script src="/js/librarian-role.js"></script>
