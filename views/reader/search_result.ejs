<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Results</title>
    <link rel="stylesheet" href="/styles/main.css" />
    <link rel="stylesheet" href="/styles/footer.css" />
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
        integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script defer src="js/homepage.js"></script>
</head>

<header>
    <%- include("../partials_readers/head_navigation.ejs") %>
</header>

<body>

    <main class="search-result grid grid-cols-4 pt-12">
        <aside class="search-filter col-span-1">
            <form action="/search" method="get">
                <h2>Search Options</h2>

                <label for="title">Title:</label>
                <input class="border p-1 flex-1 rounded-md" type="text" name="title" id="title"
                    value="<%= searchOptions.title %>">

                <label for="publishedBefore">Published Before:</label>
                <input type="date" name="publishedBefore" id="publishedBefore"
                    value="<%= searchOptions.publishedBefore %>">

                <label for="publishedAfter">Published After:</label>
                <input type="date" name="publishedAfter" id="publishedAfter"
                    value="<%= searchOptions.publishedAfter %>">

                <label>Categories:</label>
                <% categories.forEach(category=> { %>
                    <label>
                        <input type="checkbox" name="category" value="<%= category %>" <%=searchOptions.category &&
                            searchOptions.category.includes(category) ? 'checked' : '' %>>
                        <%= category %>
                    </label>
                    <% }); %>

                        <label for="available">Available Only:</label>
                        <input type="checkbox" name="available" id="available" <%=searchOptions.available ? 'checked'
                            : '' %>>

                        <button type="submit">Update Search</button>
            </form>
        </aside>
        <section class="col-span-3">
            <h2>Search Results</h2>
            <% if (books.length> 0) { %>
                <ul>
                    <% books.forEach(book=> { %>
                        <li>
                            <h3>
                                <%= book.title %>
                            </h3>
                            <p>Author: <%= book.author %>
                            </p>
                            <!-- Add book description and images -->
                        </li>
                        <% }); %>
                </ul>
                <% } else { %>
                    <p>No books found.</p>
                    <% } %>
        </section>
    </main>

    <%- include('../partials_readers/footer.ejs') %>

</body>

</html>