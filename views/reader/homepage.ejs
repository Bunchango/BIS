<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="styles/main.css">
    <link rel="stylesheet" href="styles/slider.css">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script defer src="js/homepage.js"></script>
</head>
    <%- include('../partials_readers/head_navigation.ejs') %>
        <body>
            <!-- Search Section -->
            <section id="search-cont" class="flex items-center justify-center">
                <div class="slider">
                    <div class="list">
                        <div class="item">
                            <img src="https://th.bing.com/th/id/R.e1707c345d5ac10c80a674030e606643?rik=pOsTg5KBoLuNvw&riu=http%3a%2f%2fwww.snut.fr%2fwp-content%2fuploads%2f2015%2f08%2fimage-de-paysage.jpg&ehk=1O5SWKkGpZ8yU%2b%2fAnLXG1v8k6BKxgyiXgHbOWBW1ir0%3d&risl=1&pid=ImgRaw&r=0" alt="Background Image 1">
                        </div>
                        <div class="item">
                            <img src="https://wallpaperaccess.com/full/4958480.jpg" alt="Background Image 2">
                        </div>
                        <div class="item">
                            <img src="https://th.bing.com/th/id/R.fd264cdf4fe5ef35c74374a135c30ec5?rik=LHY0sEL2J0%2bSzg&pid=ImgRaw&r=0" alt="Background Image 3">
                        </div>
                    </div>
                    <div class="buttons">
                        <button id="prev"><</button>
                        <button id="next">></button>
                    </div>
                    <ul class="dots">
                        <li class="active"></li>
                        <li></li>
                        <li></li>
                    </ul>
                </div>
                <div id="search" class="bg-white p-8 rounded-lg shadow-md max-w-full">
                    <h2 class="text-2xl font-semibold mb-4">Search for Something</h2>
                    <div class="flex items-center">
                        <input type="text" placeholder="Enter your search" class="border p-2 flex-1 rounded-l-md">
                        <button class="bg-blue-500 text-white p-2 rounded-r-md">Search</button>
                    </div>
                </div>
            </section>
        
            <!-- Card Section -->
            <section class="container mx-auto mt-8">
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                    <!-- Example Card -->
                    <div class="bg-white p-4 rounded-lg shadow-md">
                        <h3 class="text-xl font-semibold mb-2">Card Title</h3>
                        <p class="text-gray-600">Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                        <a href="#" class="text-blue-500 mt-2 inline-block hover:underline">Read More</a>
                    </div>
                    <!-- Repeat the above card structure for more cards -->
                </div>
            </section>
            
            <script src="js/slider.js"></script>
        </body>
    <%- include('../partials_readers/footer.ejs') %>
