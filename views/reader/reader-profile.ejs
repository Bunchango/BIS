<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Account Details</title>
    <link rel="stylesheet" href="/styles/main.css" />
    <link rel="stylesheet" href="/styles/footer.css" />
    <link rel="stylesheet" href="/styles/reader-profile.css" />
    <link rel="icon" href="/images/vxnhe-icon.png" type="image/x-icon">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
        integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script defer src="/js/homepage.js"></script>
</head>

<body>
    <%- include('../partials_readers/head_navigation.ejs'), { user: user } %>
    <div class="whole-upper">
        <div class="upper">
            <img class="background" src="/<%= user.background%>" alt="background">
            <div class="user-info">
                <div class="profile-option">
                    <img class="avatar" src="/<%= user.profilePicture %>" alt="<%= user.username %>'s avatar">
                    <div id="reader-name-box">
                        <div class="name"><%= user.username %></div>
                        <div id="email"><%= user.gmail %></div>
                    </div>

                </div>

                <div id="set-buttons">
                    <div class="set-default">
                        <form action="profile/set-default" method="POST">
                            <button type="submit" id="set-default">Set Default</button>
                        </form>
                    </div>

                    <div class="edit-profile">
                        <% if (errors && errors.length > 0) { %>
                        <i class="fa-solid fa-triangle-exclamation"></i>
                        <% } %>
                        <button data-modal-target="#pop-up-edit" id="edit">Edit Profile</button>
                    </div>
                </div>


                <div class="pop-up-modal" id="pop-up-edit">
                    <div class="edit-header">
                        <div class="title">Edit Profile</div>
                        <button data-close-button class="close-modal">&times;</button>
                    </div>
                    <div class="edit-body">
                        <form action="/reader/profile/edit-profile" method="POST" enctype="multipart/form-data">

                            <% if (errors && errors.length > 0) { %>
                            <h3>Errors</h3>
                            <ul class="error-messages">
                                <% errors.forEach(error => { %>
                                <li><%= error.msg %></li>
                                <% }); %>
                            </ul>
                            <% } %>
                            <div id="edit-username-box">
                                <div class="title">Username</div>
                                <div class="layer-two">
                                    <div id="name">Current Username: <%= user.username%></div>
                                    <div class="edit-file-cont">
                                        <label for="username">New User Name:</label>
                                        <input type="text" id="username" name="username">
                                    </div>
                                </div>
                            </div>

                            <div id="edit-background-box">
                                <div class="title">Background Image</div>
                                <div class="layer-two">
                                    <img id="background" src="/<%= user.background%>" alt="background">
                                    <div class="edit-file-cont">
                                        <label for="background-pic">Upload:</label>
                                        <input type="file" name="background" accept="image/*" id="background-pic">
                                    </div>
                                </div>
                            </div>

                            <div id="edit-ava-box">
                                <div class="title">Avatar</div>
                                <div class="layer-two">
                                    <div class="ava-edit-cont">
                                        <img class="avatar" src="/<%= user.profilePicture %>"
                                            alt="<%= user.username %>'s avatar">
                                    </div>
                                    <div class="edit-file-cont">
                                        <label for="avatar-pic">Upload:</label>
                                        <input type="file" name="avatar" accept="image/*" id="avatar-pic">
                                    </div>
                                </div>
                            </div>
                            <div id="confirm-change-box">
                                <div>
                                    <label for="confirm">Confirm Changes:</label>
                                    <input type="checkbox" name="confirm" id="confirm">
                                </div>
                                <button type="submit" class="submit-button">Submit</button>
                            </div>
                        </form>

                    </div>
                </div>
                <!-- pop up window for Edit profile -->


            </div>

            <div class="menu-list">
                <div class="tab">
                    <button class="tablinks custom-text-orange" onclick="openCity(event, 'my-cart')">My Cart</button>
                    <button class="tablinks custom-text-orange" onclick="openCity(event, 'my-requests')">My Requests</button>
                    <button class="tablinks custom-text-orange" onclick="openCity(event, 'my-loans')">My Loan</button>
                    <button class="tablinks custom-text-orange" onclick="openCity(event, 'my-wishlist')">My Wishlist</button>
                </div>
            </div>

        </div>
    </div>

    <div class="whole-lower">
        <div class="lower">
            <div id="my-cart" class="tabcontent">
                <h3 class="text-center text-6xl custom-text-orange mt-8 ">My Cart</h3>
                <ul> 
                    <!-- Replace with backend of my cart here -->
                    <div class="flex items-center space-x-4 p-4 border rounded-lg shadow-2xl mt-6">
                        <div class="flex-shrink-0">
                          <img src="/images/lib1.jpg" alt="Image" class="w-40 h-52 rounded-xl">
                        </div>
                        <div class="flex-grow ">
                          <p class="text-4xl font-semibold ml-10"> Book Title </p>
                          <p class="text-gray-600 ml-10">This is a brief description of the book.</p>
                        </div>
                        <div class="flex-shrink-0">
                          <button class="px-4 py-3 mr-20 text-white bg-red-500 rounded hover:bg-red-600">Remove</button>
                        </div>
                      </div>
                      
                </ul>
            </div>

            <div id="my-requests" class="tabcontent">
                <h3 class="text-center text-6xl custom-text-orange mt-8  ">My Requests</h3>
                <ul>
                    <% formattedRequests.forEach(request => { %>
                    <li>
                        <p><strong>Library:</strong> <%= request.library.name %></p>
                        <p><strong>Status:</strong> <%= request.status %></p>
                        <p><strong>Pickup Date:</strong>
                            <%= request.pickupDate ? request.pickupDate.toLocaleDateString() : 'N/A' %></p>
                        <ul>
                            <% request.books.forEach(book => { %>
                            <li><%= book.title %></li>
                            <% }); %>
                        </ul>
                    </li>
                    <% }); %>
                </ul>
            </div>

            <div id="my-loans" class="tabcontent">
                <h3 class="text-center text-6xl custom-text-orange mt-8  ">My Loans</h3>
                <ul>
                    <% loans.forEach(loan => { %>
                    <li>
                        <p><strong>Library:</strong> <%= loan.library.name %></p>
                        <ul>
                            <% loan.books.forEach(book => { %>
                            <li><%= book.title %></li>
                            <% }); %>
                        </ul>
                    </li>
                    <% }); %>
                </ul>
            </div>

            <div id="my-wishlist" class="tabcontent">
                <h3 class="text-center text-6xl custom-text-orange mt-8 ">My Wishlist</h3>
                <ul>
                    <% wishList.forEach(book => { %>
                    <li><%= book.title %></li>
                    <% }); %>
                </ul>
            </div>
        </div>
    </div>

    <script>
        function openCity(evt, cityName) {
            var i, tabcontent, tablinks;
            tabcontent = document.getElementsByClassName("tabcontent");
            for (i = 0; i < tabcontent.length; i++) {
                tabcontent[i].style.display = "none";
            }
            tablinks = document.getElementsByClassName("tablinks");
            for (i = 0; i < tablinks.length; i++) {
                tablinks[i].className = tablinks[i].className.replace(" active", "");
            }
            document.getElementById(cityName).style.display = "block";
            evt.currentTarget.className += " active";
        }
    </script>

    <%- include('../partials_readers/footer.ejs') %>
</body>
<script src="https://kit.fontawesome.com/5c0d7c8bb2.js" crossorigin="anonymous"></script>

</html>